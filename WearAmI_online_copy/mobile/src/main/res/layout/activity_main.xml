<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="WearAmI online:"
        android:id="@+id/cont"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/dato"
        android:layout_below="@+id/cont"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:text="Data:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipText"
        android:editable="true"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:text="192.168.2.4"
        android:layout_marginEnd="40dp"
        android:layout_alignTop="@+id/dato"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP of the server:"
        android:id="@+id/textView"
        android:layout_above="@+id/ipText"
        android:layout_alignEnd="@+id/ipText"
        android:textColor="#5a8add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/buttonReset"
        android:layout_below="@+id/ipText"
        android:layout_alignEnd="@+id/ipText"
        android:layout_marginTop="28dp"
        android:onClick="buttonClick" /><![CDATA[












    p" />





]]>
</RelativeLayout>
